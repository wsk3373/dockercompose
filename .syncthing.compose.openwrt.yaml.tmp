version: '3.8'
services:

######################################################
  syncthing:
    image: syncthing/syncthing
    container_name: syncthing
    hostname: my-syncthing
    environment:
      - PUID=0
      - PGID=0
    volumes:
      - /lvm2-th/syncthing:/var/syncthing
    network_mode: host
    restart: unless-stopped


#######################################################
  openwrt:
    # image: sulinggg/openwrt
    # image: kiddin9/openwrt-nginx 
    #image: piaoyizy/openwrt-x86 
    # image: crazygit/lean-openwrt-x86-64 #原版
    # image: imageNamepiaoyizy/openwrt-x86
    image: registry.cn-shanghai.aliyuncs.com/suling/openwrt:x86_64 #测试可用
    #raymondwong/openwrt_r9:21.2.1-arm64
    command: /sbin/init
    privileged: true
    restart: always
    networks:
      macnet:
        ipv4_address: 192.168.88.12
        
######################################################
  Aria2-Pro:
    container_name: aria2-pro
    image: p3terx/aria2-pro
    environment:
      - PUID=65534
      - PGID=65534
      - UMASK_SET=022
      - RPC_SECRET=P3TERX
      - RPC_PORT=6800
      - LISTEN_PORT=6888
      - DISK_CACHE=64M
      - IPV6_MODE=false
      - UPDATE_TRACKERS=true
      - CUSTOM_TRACKER_URL=
      - TZ=Asia/Shanghai
    volumes:
      - /aria2-config:/config
      - /lvm2-th/syncthing/aria2-downloads:/downloads
# If you use host network mode, then no port mapping is required.
# This is the easiest way to use IPv6 networks.
    network_mode: host
#    network_mode: bridge
#    ports:
#      - 6800:6800
#      - 6888:6888
#      - 6888:6888/udp
    restart: unless-stopped
# Since Aria2 will continue to generate logs, limit the log size to 1M to prevent your hard disk from running out of space.
    logging:
      driver: json-file
      options:
        max-size: 1m

# AriaNg is just a static web page, usually you only need to deploy on a single host.
  AriaNg:
    container_name: ariang
    image: p3terx/ariang
    command: --port 6880 --ipv6
    network_mode: host
#    network_mode: bridge
#    ports:
#      - 6880:6880
    restart: unless-stopped
    logging:
      driver: json-file
      options:
        max-size: 1m
############################################





networks:
  macnet:
    driver: macvlan
    driver_opts:
      parent: enx000ec6ab4851
    ipam:
      config:
        - subnet: 192.168.88.0/24
          gateway: 192.168.88.1

